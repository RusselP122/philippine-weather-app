{
    "rewrites": [
        {
            "source": "/api/earthquake-data",
            "destination": "https://data.garbinwx.cloud/api/earthquakes.json"
        },
        {
            "source": "/api/cap-alerts",
            "destination": "https://data.garbinwx.cloud/api/cap-alerts.json"
        },
        {
            "source": "/api/ogimet/:path*",
            "destination": "http://www.ogimet.com/cgi-bin/:path*"
        },
        {
            "source": "/((?!data/).*)",
            "destination": "/index.html"
        }
    ],
    "outputDirectory": "dist"
}